{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "resolveJsonModule": true,
        "lib": ["es5", "es6", "es7", "dom", "es2015", "es2016", "es2017"],
        "allowSyntheticDefaultImports": true,
        "emitDecoratorMetadata": true,
        "noFallthroughCasesInSwitch": true,
        "skipLibCheck": true,
        "noImplicitReturns": true,
        "experimentalDecorators": true,
        "target": "es6",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "paths": {
            "common/*": ["./common/*"],
            "shared/*": ["./shared/*"],
            "utils/*": ["./utils/*"],
            "feature-modules/*": ["./feature-modules/*"]
        }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}
